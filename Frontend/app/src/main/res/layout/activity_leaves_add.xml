<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@drawable/leave_indicator_border_white"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

    <Spinner
        android:id="@+id/leaveTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@drawable/leave_indicator_border_white"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Start Date"
        android:textStyle="bold"
        android:textSize="15dp" />

        <ImageView
            android:id="@+id/startDateCalendarPicker"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/calendaricon_icononly"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@drawable/leave_indicator_border_white"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/endDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="End Date"
            android:textStyle="bold"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/endDateCalendarPicker"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/calendaricon_icononly"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@drawable/leave_indicator_border_white"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Spinner
            android:id="@+id/approverSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="top|left"
        android:background="@drawable/leave_indicator_border_white"
        android:hint="Remarks:"
        android:layout_marginBottom="10dp"
        />
    
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textStyle="bold"
        android:theme="@style/buttonTheme"
        android:text="Submit"/>


</LinearLayout>